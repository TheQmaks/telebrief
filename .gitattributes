# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Configuration files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Lock files
*.lock text eol=lf

# Justfile
justfile text eol=lf

# Exclude from language statistics
*.lock linguist-generated=true
requirements*.lock linguist-generated=true
uv.lock linguist-generated=true 